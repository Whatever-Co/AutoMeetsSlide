{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "NotebookLM Slide Gen",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": "^(/|file://).+",
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/notebooklm-cli",
            "sidecar": true,
            "args": true
          }
        ]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "readDir": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": ["$APPLOCALDATA/**", "$HOME/**", "$TEMP/**", "/tmp/**"]
      },
      "window": {
        "all": false,
        "create": true,
        "show": true,
        "hide": true,
        "close": true,
        "minimize": true,
        "setPosition": true,
        "setSize": true,
        "setFocus": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "sh.saqoo.notebooklm",
      "externalBin": [
        "binaries/notebooklm-cli"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "NotebookLM Slide Gen",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500
      }
    ]
  }
}
